<h3 class="text-center py-2">Add a tender</h3>
<form method="POST" action="/tenders/add" class="col-12 col-sm-8 col-md-3 mx-auto">
  <div class="form-group py-1">
    <label class="form-label" for="tender_name">Object of tender</label>
    <input
      type="text"
      name="name"
      id="tender_name"
      placeholder="Object of tender"
      required
      class="form-control"
    />
  </div>
  <div class="form-group py-1">
    <label for="tender_institution" class="form-label">Institution</label>
    <input
      type="text"
      name="institution"
      id="tender_institution"
      placeholder="Institution"
      required
      class="form-control"
    />
  </div>
  <div class="form-group py-1">
    <label for="tender_description" class="form-label">Description</label>
    <input
      type="text"
      name="description"
      id="tender_description"
      placeholder="Description"
      required
      class="form-control"
    />
  </div>
  <div class="form-group py-1">
    <label for="tender_start_date" class="form-label">Start of tender</label>
    <input
      type="datetime-local"
      name="start"
      id="tender_start_date"
      required
      class="form-control"
    />
  </div>
  <div class="form-group py-1">
    <label for="tender_end_date" class="form-label">End of tender</label>
    <input type="datetime-local"
      name="end"
      id="tender_end_date" required class="form-control"/>
  </div>
  <div class="form-group py-1">
    <label for="tender_max_budget" class="form-label">Maximum budget</label>
    <input
      type="number"
      name="maxBudget"
      id="tender_max_budget"
      placeholder="Max budget"
      required
      class="form-control"
    />
  </div>
  <div class="text-center">
    <button type="submit" class="btn btn-primary my-2">Add a tender</button>
  </div>
  
</form>
<% if (typeof message != 'undefined') { %>
  <p class="alert alert-success my-3 col-md-3 text-center mx-auto"><%= message %></p>
<% } %>
