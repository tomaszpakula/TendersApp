<h3 class="py-2 text-center">Add an offer</h3>
<form action="/tenders/offer/<%= id %>" method="POST" class="col-12 col-sm-6 col-md-3 mx-auto">
  <div class="form-group py-1">
    <label for="offer_name" class="form-label">Name of an offer</label>
    <input
      type="text"
      name="offerName"
      id="offer_name"
      placeholder="Name of an offer"
      required
      class="form-control"
    />
  </div>
  <div class="form-group py-1">
    <label for="offer_value" class="form-label">Offer value</label>
    <input
      type="number"
      name="offerValue"
      id="offer_value"
      placeholder="Offer value"
      required
      min="0"
      class="form-control"
    />
  </div>
  <button button type="submit" class="btn btn-primary my-2">Extend an offer</button>
</form>
