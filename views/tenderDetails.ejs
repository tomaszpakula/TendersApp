<h1>Details of Tender <%= tender.name %></h1>

<table>
  <tr>
    <th>Institution</th>
    <td>    
  </tr>
  <tr>
    <th>Description</th>
    <td><%= tender.description %></td>
  </tr>
  <tr>
    <th>Start Date</th>
    <td>
        <%= new Date(tender.start).toLocaleDateString('pl-PL', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit'
        }) %>
    </td>
  </tr>
  <tr>
    <th>End Date</th>
    <td><%= new Date(tender.end).toLocaleDateString('pl-PL', {
        year: 'numeric',
        month: '2-digit',
        day: '2-digit',
        hour: '2-digit',
        minute: '2-digit'
        }) %>
    </td>
  </tr>
</table>

<table>
    <thead>
        <th>Name</th>
        <th>Price</th>
        <th>Date</th>
    </thead>
    <% offers.forEach(offer => { %>
        <tr>
            <td><%= offer.name %></td>
            <td><%= offer.offerValue %></td>
            <td><%= offer.createdAt %></td>
        </tr>
    <% }) %>
</table>
